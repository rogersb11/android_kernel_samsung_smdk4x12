assert(package_extract_file("zImage", "/tmp/zImage"),
       write_raw_image("/tmp/zImage", "/dev/block/mmcblk0p5"),
       write_raw_image("/tmp/zImage", "/dev/block/mmcblk0p6"),
       delete("/tmp/zImage"));
